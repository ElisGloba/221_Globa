<Page x:Class="_221_Globa.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_221_Globa.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid Background="#FFB5D5CA">
        <Grid.RowDefinitions>
            <RowDefinition Height="377*"/>
            <RowDefinition Height="73*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" Name="DataGridUser" AutoGenerateColumns="False" IsReadOnly="True" RowHeight="90">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="70"/>
                <DataGridTextColumn Header="Пароль" Binding="{Binding Password}" Width="75"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="120"/>
                <DataGridTextColumn Header="Ф.И.О." Binding="{Binding FIO}" Width="250"/>
                <DataGridTextColumn Header="Фото" Binding="{Binding Photo}" Width="100"/>
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="ButtonEdit" Content="Редактировать"  Click="ButtonEdit_Click"></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="1" Name="ButtonAdd" ToolTip="Нажмите для добавления записи"  Content="Добавить" HorizontalAlignment="Left" Click="ButtonAdd_Click" />
        <Button Grid.Row="1" Name="ButtonDel" Content="Удалить" ToolTip="Нажмите для удаления записи" HorizontalAlignment="Right" Click="ButtonDel_Click"/>
    </Grid>
</Page>
