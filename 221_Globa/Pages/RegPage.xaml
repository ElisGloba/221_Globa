<Page x:Class="_221_Globa.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_221_Globa.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid Background="#FFB5D5CA">
        <Grid.RowDefinitions>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Введите логин" FontSize="16" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <Label Content="Введите пароль" HorizontalAlignment="Left" Width="137" FontSize="16" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center"/>
        <Label Content="Подтвердите пароль" HorizontalAlignment="Left" Width="167" FontSize="16" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center"/>
        <Label Content="Выберите роль" HorizontalAlignment="Left" Margin="0,7,0,7" Width="137" FontSize="16" Grid.Column="1" Grid.Row="4" VerticalAlignment="Center"/>
        <Label Content="Введите ФИО" HorizontalAlignment="Left" Width="145" FontSize="16" Grid.Column="1" Grid.Row="5" VerticalAlignment="Center"/>
        <Button Content="Отмена" x:Name="BtnBackReg" ToolTip="Нажмите для отмены" HorizontalAlignment="Center" VerticalAlignment="Center" Width="110" Grid.Column="1" Grid.Row="6" Click="ButtonBack_Click"/>
        <ComboBox x:Name="RoleComboBox" ToolTip="Выберите роль" Grid.Column="2" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="4" VerticalAlignment="Center" Width="205" FontSize="12" Background="#FFFFFF"/>
        <Button Content="Регистрация" ToolTip="Нажмите для регистрации" HorizontalAlignment="Left" VerticalAlignment="Center" Width="110" Grid.Column="2" Grid.Row="6" Margin="58,0,0,0" Click="ButtonКReg_Click"/>
        <TextBlock Foreground="Gray" Name="txtHintLogin" Text="Логин или почта" Margin="11,0,0,0" Width="205" HorizontalAlignment="Left" Height="23" FontSize="14" VerticalAlignment="Center" Grid.Column="2" Grid.Row="1"/>
        <TextBox Grid.Column="2" Background="Transparent" x:Name="txtBoxLogin" TextChanged="TextBoxLogin_Changed" ToolTip="Введите логин или почту"  TextWrapping="Wrap" Text="" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" Width="206" Height="23"/>
        <TextBlock Foreground="Gray" Name="txtHintFIO" Text="Фамилия Имя Отчество" Margin="11,0,0,0" Width="205" HorizontalAlignment="Left" Height="23" FontSize="14" VerticalAlignment="Center" Grid.Column="2" Grid.Row="5"/>
        <TextBox Grid.Column="2" Background="Transparent" Name="TextBoxFIO" TextChanged="TextBoxFIO_Changed" ToolTip="Введите фамилию имя отчество"  TextWrapping="Wrap" Text="" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="11,0,0,0" Grid.Row="5" Width="206" Height="23"/>
        <TextBlock Foreground="Gray" x:Name="txtHintPassword1" Margin="12,0,0,0" Width="205" HorizontalAlignment="Left" Height="23" FontSize="14" VerticalAlignment="Center" Grid.Column="2" Grid.Row="2"><Run Language="ru-ru" Text="Пароль"/></TextBlock>
        <TextBlock Foreground="Gray" x:Name="txtHintPassword2" Margin="10,0,0,0" Width="205" HorizontalAlignment="Left" Height="23" FontSize="14" VerticalAlignment="Center" Grid.Column="2" Grid.Row="3"><Run Language="ru-ru" Text="Пароль"/></TextBlock>
        <PasswordBox Grid.Column="2"  x:Name="PasBox1" Background="{x:Null}" PasswordChanged="PasswordBox_PasswordChanged1" ToolTip="Введите пароль" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="206" Height="23"/>
        <PasswordBox Grid.Column="2" x:Name="PasBox2" PasswordChanged="PasswordBox_PasswordChanged2" Background="{x:Null}" ToolTip="Подтвердите пароль" HorizontalAlignment="Left" Margin="9,0,0,0" Grid.Row="3" VerticalAlignment="Center" Width="206" Height="23"/>

    </Grid>
</Page>
